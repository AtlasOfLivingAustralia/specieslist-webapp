<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="fedoraAPIConfig" class="csiro.diasb.fedora.FedoraAPIConfig">
		<property name="userName" value="fedoraAdmin" />
		<property name="userPass" value="fedoraAdmin" />
		<property name="host" value="localhost" />
		<property name="port" value="8080" />
		<property name="pathM" value="/fedora/wsdl?api=API-M" />
		<property name="pathA" value="/fedora/wsdl?api=API-A" />
		<property name="RISearchPath" value="/fedora/risearch" />
        <property name="SOLRSearchPath" value="/solr" />
		<property name="JMSPort" value="61616" />
	</bean>

	<bean id="fedoraAPI" class="csiro.diasb.fedora.FedoraAPI">
		<property name="fedoraAPIConfig">
			<ref bean="fedoraAPIConfig" />
		</property>
	</bean>

	<bean id="repository" class="csiro.diasb.fedora.FedoraRepository">
		<property name="fedoraAPI">
			<ref bean="fedoraAPI" />
		</property>
	</bean>
</beans>
